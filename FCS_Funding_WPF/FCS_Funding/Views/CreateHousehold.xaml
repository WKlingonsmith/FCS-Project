<Window x:Class="FCS_Funding.Views.CreateHousehold"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CreateHousehold" Width="1080" Height="750" MinHeight="750" MaxHeight="750" MinWidth="1080" MaxWidth="1080">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--<CheckBox Margin="0 5 0 0" x:Name="chkConfirmDel" Checked="chkHousholdExists" FontSize="20" Grid.Column="2" Grid.Row="4">Household Exists</CheckBox>-->
        <TextBlock Text="Household Population:" TextAlignment="Center"  FontSize="18" Grid.Row="3" Grid.Column="1" Height="30" />
        <Border Grid.Row="3" Grid.Column="2" Height="35"   BorderThickness="3, 3, 3, 3" BorderBrush="Black">
            <TextBox  FontSize="18" Grid.Row="3" Grid.Column="2" Text="{Binding address, ElementName=ThisWindow}"/>
        </Border>
        <ComboBox Name="income" IsEditable="True" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="228" Height="40" Text="Income" Grid.Column="4" Grid.Row="3" FontSize="20" >
            <ComboBoxItem Name="zero">$0-9,999</ComboBoxItem>
            <ComboBoxItem Name="ten">$10,000-14,999</ComboBoxItem>
            <ComboBoxItem Name="twentyfour">$15,000-24,000</ComboBoxItem>
            <ComboBoxItem Name="thirtyfive">$25,000-34,999</ComboBoxItem>
            <ComboBoxItem Name="thirtyfiveplus">$35,000+</ComboBoxItem>
        </ComboBox>
        <ComboBox Name="headOfHousehold" IsEditable="True" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="228" Height="40" Text="Head Of Household" Grid.Column="1" Grid.Row="5" FontSize="20" Grid.ColumnSpan="3" Margin="178.8,0,130.8,0">
            <ComboBoxItem Name="Mother">Mother</ComboBoxItem>
            <ComboBoxItem Name="Father">Father</ComboBoxItem>
        </ComboBox>
        <Button FontSize="18" Grid.Column="3" Grid.Row="13" Content="Add Client"  Margin="0.2,10,0,30" Grid.RowSpan="2"  />

    </Grid>
</Window>
