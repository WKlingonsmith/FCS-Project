                        <DataGridTextColumn Header="Last Name" Width="110" Binding="{Binding Path=LastName}"/>
                        <DataGridTextColumn Header="Gender" Width="100" Binding="{Binding Path=Gender}"/>
                        <DataGridTextColumn Header="Age Group" Width="110" Binding="{Binding Path=AgeGroup}"/>
                        <DataGridTextColumn Header="Ethnicity" Width="110" Binding="{Binding Path=Ethnicity}"/>
                        <DataGridTextColumn Header="Date started" Width="110" Binding="{Binding Path=Time}"/>
                        <DataGridTextColumn Header="Is Head" Width="110" Binding="{Binding Path=IsHead}"/>
                        <DataGridTextColumn Header="Relation to Head" Width="110" Binding="{Binding Path=RelationToHead}"/>
