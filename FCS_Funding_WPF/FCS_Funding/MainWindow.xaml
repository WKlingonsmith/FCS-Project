                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="14"  BorderThickness="0, 0, 3, 0" BorderBrush="Black">
                </Border>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="1" Content="Create New Client"/>
            </Grid>
        </TabItem>
        
