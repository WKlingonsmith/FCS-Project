                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="14"  BorderThickness="0, 0, 3, 0" BorderBrush="Black">
                </Border>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="1" Content="Create New Donor"/>
            </Grid>
        </TabItem>
        <TabItem Width="150" Height="50" Header="In-Kind" FontSize="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
