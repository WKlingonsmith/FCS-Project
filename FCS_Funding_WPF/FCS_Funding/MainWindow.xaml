                </Grid.RowDefinitions>
                <Border Grid.RowSpan="14"  BorderThickness="0, 0, 3, 0" BorderBrush="Black">
                </Border>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="1" Content="Client Revenue"/>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="2" Content="Client YTD"/>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="3" Content="Donations"/>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="4" Content="In-Kind Donations"/>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="5" Content="Grant Donations"/>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="6" Content="Grant Fiscal Year"/>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="7" Content="Accounting Sheet"/>
            </Grid>
        </TabItem>
        <TabItem Width="150" Height="50" Header="Administrative" FontSize="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.RowSpan="14"  BorderThickness="0, 0, 3, 0" BorderBrush="Black">
                </Border>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="1" Content="Create New Account"/>
                <Button Height="45" Width="210" Grid.Column="0" Grid.Row="2" Content="Create Backup"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
